    <fragment
        android:id="@+id/reaction_layout"
        android:name="com.example.test.reaction_layout"
        android:label="reaction_layout"
        tools:layout="@layout/reaction_layout" >
        <action
            android:id="@+id/action_reaction_layout_to_home_layout"
            app:destination="@id/home_layout" />
