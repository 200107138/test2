<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <import type="android.view.View" />
        <variable
            name="gameViewModel"
            type="com.example.test.SecondGameViewModel" />
        <variable
            name="maxNoOfWords"
            type="int" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    android:padding="16dp"
    tools:context=".SecondGameFragment">
    <TextView
        android:id="@+id/secondgamecount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{@string/game_round_count(gameViewModel.currentSecondGameCount, maxNoOfWords)}"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Round 0 of 3"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/second_game_description"

        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondgamecount" />

    <TextView
        android:id="@+id/second_game_number1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="@{gameViewModel.firstnumber == 0 ? @string/empty : gameViewModel.firstnumber.toString()}"
        android:gravity="center"
        android:textSize="50dp"
        android:background="@drawable/first_game_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"></TextView>

    <TextView
        android:id="@+id/dot"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/dot"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"></TextView>

    <TextView
        android:id="@+id/second_game_number2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="@{gameViewModel.secondnumber == 0 ?  @string/empty : gameViewModel.secondnumber.toString()}"
        android:gravity="center"
        android:textSize="50dp"
        android:background="@drawable/first_game_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dot"
        app:layout_constraintTop_toBottomOf="@+id/textView"></TextView>

    <TextView
        android:id="@+id/start_second_game"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:visibility="@{gameViewModel.clicked ?  View.GONE : View.VISIBLE}"
        android:text="@{gameViewModel.starttext}"
        android:textSize="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>